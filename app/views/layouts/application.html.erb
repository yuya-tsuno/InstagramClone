<!DOCTYPE html>
<html>
  <head>
    <title>InstagramClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1>InstagramClone</h1>

      <% if logged_in? %>
        <h2>Hello, <%= current_user.name %>! Please enjoy InstagramClone!</h2>
        <p><%= link_to 'Feeds', feeds_path %> | <%= link_to 'New Feed', new_feed_path %> |
         <%= link_to "Your Profile", user_path(current_user.id) %> | <%= link_to "Logout", session_path(current_user.id), method: :delete %></p>
      <% else %>
        <h2>Hello, guest! Please log in here!</h2>
        <p><%= link_to 'Feeds', feeds_path %> | <%= link_to "Sign up", new_user_path %> | <%= link_to "Login", new_session_path %></p>
      <% end %>
    </header>

    <div class="container">
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
      <%= yield %>
    </div>

    <footer>
      <p>@2020 InstagramClone by Yuya Tsuno</p>
    </footer>
  </body>
</html>
