<h3>Confirm</h3>

<%= form_with(model: @picture, local: true, url: confirm_new_or_edit, method: confirm_form_method) do |form| %>
  <%= image_tag(@picture.image.url) if @picture.image && @picture.image.url %>
  <%= form.hidden_field :image_cache %>
  <%= form.hidden_field :content %>
  <p>Image : <%= @picture.image %></p>
  <p>Comment : <%= @picture.content %></p>
  <%= form.submit  "Submit" %>
<% end %>

<%= form_with(model: @picture, url: new_picture_path, local: true, method: "get") do |form| %>
  <%= form.hidden_field :image_cache %>
  <%= form.hidden_field :content %>
  <%= form.submit "戻る", name: "back" %>
<% end %>